{
   "name": "@hexlet/code",
   "version": "0.1.0",
   "description": "fastify-nodejs-application",
   "main": "server/index.js",
   "scripts": {
      "test": "jest",
      "prebuild": "rm -rf dist",
      "build-configs": "babel webpack.config.babel.js --out-dir dist",
      "build-db": "cp knexfile.js dist && NODE_ENV=production knex migrate:latest",
      "build-server": "NODE_ENV=production babel server --out-dir dist/server --source-maps inline && cp -r server/views dist/server/views",
      "build-frontend": "NODE_ENV=production webpack --mode production",
      "build": "npm run build-configs && npm run build-frontend && npm run build-server && npm run build-db",
      "start": "NODE_ENV=production node dist/server/bin/server.js"
   },
   "engines": {
      "node": "14.x"
   },
   "jest": {
      "modulePathIgnorePatterns": [
         "<rootDir>/__tests__/helpers/"
      ]
   },
   "author": "Vera Nikitinskaya",
   "license": "ISC",
   "repository": {
      "type": "git",
      "url": "git+https://github.com/hexlet-boilerplates/fastify-nodejs-application.git"
   },
   "bugs": {
      "url": "https://github.com/hexlet-boilerplates/fastify-nodejs-application/issues"
   },
   "homepage": "https://github.com/hexlet-boilerplates/fastify-nodejs-application.git#readme",
   "dependencies": {
      "bootstrap": "^4.5.3",
      "dotenv": "^8.2.0",
      "fastify": "^3.9.1",
      "fastify-error-page": "^4.0.0",
      "fastify-flash": "^2.0.2",
      "fastify-formbody": "^5.0.0",
      "fastify-method-override": "^1.5.1",
      "fastify-objectionjs": "^0.3.0",
      "fastify-passport": "^0.1.0",
      "fastify-reverse-routes": "^2.0.0",
      "fastify-secure-session": "^2.3.0",
      "fastify-sensible": "^3.1.0",
      "fastify-static": "^3.3.0",
      "i18next": "^19.8.4",
      "knex": "^0.21.13",
      "lodash": "^4.17.20",
      "mini-css-extract-plugin": "^1.3.3",
      "objection": "^2.2.3",
      "objection-unique": "^1.2.1",
      "pg": "^8.5.1",
      "pino-pretty": "^4.3.0",
      "point-of-view": "^4.7.0",
      "pug": "^3.0.0",
      "qs": "^6.9.4",
      "sqlite3": "^5.0.0",
      "webpack": "^5.10.2"
   },
   "devDependencies": {
      "@babel/cli": "^7.12.10",
      "@babel/core": "^7.12.10",
      "@babel/node": "^7.12.10",
      "@babel/preset-env": "^7.12.10",
      "@jest/globals": "^26.6.2",
      "@types/node": "^14.14.13",
      "babel-eslint": "^10.1.0",
      "babel-jest": "^26.6.3",
      "babel-loader": "^8.2.2",
      "css-loader": "^5.0.1",
      "eslint": "^7.15.0",
      "eslint-config-airbnb-base": "^14.2.1",
      "eslint-plugin-import": "^2.22.1",
      "eslint-plugin-jest": "^24.1.3",
      "jest": "^26.6.3",
      "jest-cli": "^26.6.3",
      "nodemon": "^2.0.6",
      "style-loader": "^2.0.0",
      "webpack-cli": "^4.2.0",
      "webpack-dev-server": "^3.11.0"
   }
}
